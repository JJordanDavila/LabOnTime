<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/analisisMedicoConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tipoAnalisisTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIPO DE ANALISIS"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/nombrePacienteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOMBRE DEL PACIENTE"
        app:layout_constraintTop_toBottomOf="@id/tipoAnalisisTextView"

        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"/>

</android.support.constraint.ConstraintLayout>